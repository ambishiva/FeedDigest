<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feeed_digest_root_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/feed_digest_bg_color"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/feed_digest_title"
        style="@style/FeedDigestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feed_digest_description"
        style="@style/FeedDigestDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_digest_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/feed_digest_image" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/feed_digest_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@id/feed_digest_title"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
